<div class="row sub-header">
    <h3>Categories</h3>
</div>

<div class="row">
    <button class="btn btn-info pull-left clsManageCategory" object-id="-1" object-mode="A">
        <span class="glyphicon glyphicon-plus"></span> Add New Category
    </button>
    <button  class="btn btn-info pull-right clsManageProducts">
        <span class="glyphicon glyphicon-pencil"></span> Manage Products
    </button>
</div>

<div class="row dv-upper-margin">
    <div class="col-md-12 input-group">
        <input type="text" class="form-control search-box clsCategorySearch" placeholder="Search Category">

    </div>
</div>
<div class="row dv-upper-margin">
    <button class="btn btn-info pull-right clsRefreshCategories">
        <span class="glyphicon glyphicon-refresh"></span>
    </button>
</div>
<div class="row">
    <div class="dv-product-details clsCategoryDetails">
        @Html.Action("_CategoryDetails")
    </div>
</div>


